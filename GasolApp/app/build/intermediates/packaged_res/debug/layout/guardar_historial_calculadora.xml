<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/k2d_bold"
        android:text="Seleccione el tipo de combustible: "
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/rd_sp95"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rd_sp95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:buttonTint="@color/naranja"
                android:text="SP95"
                android:textSize="15dp"
                android:fontFamily="@font/k2d_bold"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rd_sp98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:buttonTint="@color/naranja"
                android:text="SP98"
                android:textSize="15dp"
                android:fontFamily="@font/k2d_bold"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rd_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:buttonTint="@color/naranja"
                android:text="A"
                android:textSize="15dp"
                android:fontFamily="@font/k2d_bold"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rd_aplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:buttonTint="@color/naranja"
                android:text="A+"
                android:textSize="15dp"
                android:fontFamily="@font/k2d_bold"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rd_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:buttonTint="@color/naranja"
                android:text="B"
                android:textSize="15dp"
                android:fontFamily="@font/k2d_bold"
                android:textColor="@color/white" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/precio_litro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio:"
        android:textSize="20dp"
        android:fontFamily="@font/k2d_bold"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cantidad_litros"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Cantidad de litros"
            android:fontFamily="@font/k2d_bold"
            android:inputType="number"
            android:textColorHint="@color/naranja"
            android:textColor="@color/naranja"
            android:ems="10"
            android:maxLines="1" />

        <Button
            android:id="@+id/calcular_repostado"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/boton_redondo"
            android:fontFamily="@font/k2d_bold"
            android:padding="10dp"
            android:text="Calcular"
            android:textColor="@color/white"
            android:textSize="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/total_repostado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total:"
        android:textSize="20dp"
        android:fontFamily="@font/k2d_bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/separador"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:background="@drawable/separador"
        android:textSize="20dp"
        android:fontFamily="@font/k2d_bold"
        android:textColor="@color/naranja"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texto_precios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Tabla de Precios:"
            android:gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/k2d_bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/sp95_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SP95: "
            android:fontFamily="@font/k2d_bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/sp98_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SP98: "
            android:fontFamily="@font/k2d_bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/a_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A:"
            android:fontFamily="@font/k2d_bold"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/aplus_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A+:"
            android:fontFamily="@font/k2d_bold"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/b_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B:"
            android:fontFamily="@font/k2d_bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/separador2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:text=""
            android:background="@drawable/separador"
            android:textSize="10dp"
            android:fontFamily="@font/k2d_bold"
            android:textColor="@color/naranja"/>

        <TextView
            android:id="@+id/datos_gasolineras_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="InformaciÃ³n Gasolinera:"
            android:gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/k2d_bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/datos_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:fontFamily="@font/k2d_bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/datos_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direccion: "
            android:fontFamily="@font/k2d_bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/datos_provincia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provincia: "
            android:fontFamily="@font/k2d_bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/datos_municipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Municipio: "
            android:fontFamily="@font/k2d_bold"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="75dp">

            <Button
                android:id="@+id/volver"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/boton_redondo"
                android:fontFamily="@font/k2d_bold"
                android:padding="10dp"
                android:text="Volver"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <Button
                android:id="@+id/guardar_historial"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="120dp"
                android:padding="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/boton_redondo"
                android:fontFamily="@font/k2d_bold"
                android:text="GUARDAR EN HISTORIAL"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
