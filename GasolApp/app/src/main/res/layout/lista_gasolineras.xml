<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/provincia_lista"
        android:layout_width="740px"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:hint="  Provincia"
        android:textColor="@color/naranja"
        android:drawableLeft="@drawable/ic_search"
        android:fontFamily="@font/k2d_bold"
        android:textColorHint="@color/naranja" />

    <Button
        android:id="@+id/boton_buscar_provincia"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="-75dp"
        android:background="@drawable/boton_redondo"
        android:padding="15dp"
        android:text="@string/buscar"
        android:fontFamily="@font/k2d_bold"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/municipio_lista"
        android:layout_width="740px"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_search"
        android:hint="  Municipio"
        android:padding="30dp"
        android:fontFamily="@font/k2d_bold"
        android:textColor="@color/naranja"
        android:textColorHint="@color/naranja" />

    <Button
        android:id="@+id/boton_buscar_municipio"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="-75dp"
        android:background="@drawable/boton_redondo"
        android:padding="15dp"
        android:text="@string/buscar"
        android:fontFamily="@font/k2d_bold"
        android:textColor="#FFFFFF" />


    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_color" />
</LinearLayout>
